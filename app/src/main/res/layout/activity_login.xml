<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="${relativePackage}.${activityClass}" android:id="@+id/mainLayout" android:clickable="true"
	android:background="@drawable/background">

	<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
		android:layout_marginBottom="56dp" android:id="@+id/login_layout">
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
			android:ems="10" android:id="@+id/protect_code" android:layout_centerVertical="true"
			android:layout_alignStart="@+id/phone_number" android:maxLength="8" android:textSize="16dp" />
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="10" android:id="@+id/phone_number" android:layout_below="@+id/textView1"
			android:layout_centerHorizontal="true" android:inputType="phone" android:maxLength="11"
			android:textSize="16dp" />
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_above="@+id/protect_code" android:layout_alignStart="@+id/protect_code"
			android:text="@string/protect_code" android:phoneNumber="false" android:textSize="16dp" />
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/guardian_phone"
			android:id="@+id/textView1" android:layout_below="@+id/protect_code" android:layout_alignStart="@+id/phone_number"
			android:textSize="16dp" />
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_button"
			android:id="@+id/login_button" android:layout_marginTop="38dp" android:layout_below="@+id/phone_number"
			android:layout_centerHorizontal="true" android:textSize="16dp" android:nestedScrollingEnabled="true"
			android:onClick="login" />
	</RelativeLayout>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/app_name"
		android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
		android:layout_marginTop="134dp" android:textSize="30dp" />
</RelativeLayout>
